<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f6fd"
    tools:context=".Product_detail_activity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_wishlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="315dp"
        android:layout_marginTop="16dp"
        android:clickable="false"
        app:backgroundTint="#2196F3"
        app:layout_constraintStart_toStartOf="@+id/activity_product_name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/activity_product_image"
        android:layout_width="411dp"
        android:layout_height="166dp"
        android:background="#FFFFFF"
        android:clickable="false"
        android:scaleType="centerCrop"

        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bed" />

    <TextView
        android:id="@+id/activity_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:text="Product Title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_product_image" />

    <TextView
        android:id="@+id/activity_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto_bold"
        android:text="RS 45000/-"
        android:textColor="#020202"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_product_name" />

    <TextView
        android:id="@+id/activity_product_desc"
        android:layout_width="336dp"
        android:layout_height="165dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:text="Lorem Ipsum is simply dummy
    \ntext of the printing and typesetting industry.\n Lorem Ipsum has been the industry's standard \n dummy text ever since the 1500s, when an unknown printer took a galley\n of type and scrambled it to make a type specimen book. It has survived not only five centuries,"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/activity_product_price"
        app:layout_constraintTop_toBottomOf="@+id/activity_product_price" />

    <Button
        android:id="@+id/btn_addto_cart"
        android:layout_width="150dp"
        android:layout_height="83dp"

        android:layout_marginTop="36dp"
        android:backgroundTint="#2196F3"
        android:text="Add to Cart"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btn_ARcamera"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/activity_product_desc"
        app:layout_constraintTop_toBottomOf="@+id/activity_product_desc" />

    <Button
        android:id="@+id/btn_ARcamera"
        android:layout_width="152dp"
        android:layout_height="74dp"
        android:layout_marginTop="60dp"
        android:background="#F44336"
        android:text="View using Camera"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btn_addto_cart"
        app:layout_constraintEnd_toEndOf="@+id/activity_product_desc"
        app:layout_constraintTop_toBottomOf="@+id/activity_product_desc"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>